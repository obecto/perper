[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.cs]
indent_style = space
indent_size = 4
insert_final_newline = false
dotnet_sort_system_directives_first = true
dotnet_diagnostic.IDE0005.severity = warning

[*.{kt,kts}]
indent_style = space
indent_size = 4
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4
insert_final_newline = true
